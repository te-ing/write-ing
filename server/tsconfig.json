{
  "compilerOptions": {
    "target": "es5",
    "outDir" : "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["/*"],
      "@src/*": ["src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
